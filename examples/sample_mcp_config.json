{
  "mcpServers": {
    "git": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/git"],
      "capabilities": ["git", "version-control", "repository"],
      "timeout": 45,
      "description": "Git repository operations and analysis"
    },
    "time": {
      "command": "docker", 
      "args": ["run", "--rm", "-i", "mcp/time"],
      "capabilities": ["time", "datetime", "scheduling"],
      "timeout": 30,
      "description": "System time and scheduling operations"
    },
    "fetch": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/fetch"],
      "capabilities": ["web", "http", "api", "research"],
      "timeout": 60,
      "description": "Web requests and online research"
    },
    "sequentialthinking": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/sequentialthinking"],
      "capabilities": ["reasoning", "analysis", "planning"],
      "timeout": 60,
      "description": "Dynamic and reflective problem-solving through thoughts"
    },
    "memory": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/memory"],
      "capabilities": ["storage", "persistence", "memory"],
      "timeout": 45,
      "description": "Knowledge graph-based persistent memory system"
    },
    "filesystem": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/filesystem"],
      "capabilities": ["file", "directory", "filesystem"],
      "timeout": 30,
      "description": "File system operations and management"
    }
  },
  "mcpSettings": {
    "globalTimeout": 60,
    "persistentConnections": true,
    "dockerNetwork": null,
    "retryCount": 3,
    "maxConcurrentConnections": 10,
    "connectionPoolSize": 5,
    "enableMetrics": true,
    "logLevel": "INFO"
  }
} 