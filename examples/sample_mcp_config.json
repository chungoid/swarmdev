{
  "mcpServers": {
    "sequential-thinking": {
      "command": "node",
      "args": ["src/swarmdev/bundled_mcp/sequential-thinking/dist/index.js"],
      "capabilities": ["reasoning", "analysis", "planning"],
      "timeout": 30,
      "description": "Sequential thinking tool for complex reasoning"
    },
    "context7": {
      "command": "node", 
      "args": ["src/swarmdev/bundled_mcp/context7/dist/index.js"],
      "capabilities": ["documentation", "library-info", "research"],
      "timeout": 30,
      "description": "Context7 tool for library documentation"
    },
    "memory": {
      "command": "node",
      "args": ["src/swarmdev/bundled_mcp/memory/dist/index.js"],
      "capabilities": ["storage", "persistence", "memory"],
      "timeout": 15,
      "description": "Memory tool for persistent storage"
    },
    "time": {
      "command": "python",
      "args": ["-m", "mcp_server_time"],
      "capabilities": ["time", "datetime", "scheduling"],
      "timeout": 10,
      "description": "Time tool for date/time operations"
    },
    "fetch": {
      "command": "python",
      "args": ["-m", "mcp_server_fetch"],
      "capabilities": ["web", "http", "api", "research"],
      "timeout": 20,
      "description": "Fetch tool for web requests and API calls"
    },
    "git": {
      "command": "python",
      "args": ["-m", "mcp_server_git"],
      "capabilities": ["git", "version-control", "repository"],
      "timeout": 15,
      "description": "Git tool for version control operations"
    }
  },
  "mcpSettings": {
    "globalTimeout": 30,
    "persistentConnections": true,
    "dockerNetwork": null,
    "retryCount": 3
  }
} 